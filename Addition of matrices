#include <stdio.h>

int main()

{   int col,row,i,j;
    printf("enter no.of  row:");
    scanf("%d",&row);
    printf("enter no.of column:");
    scanf("%d",&col);
    int arr[row][col],arr2[row][col];
    for (i=0;i<row;i++)
    {
        for(j=0;j<col;j++)
        {
            printf("enter the elements of the first array");
            scanf("%d",&arr[i][j]);
            
        }
    }
    printf("enter the next array:");
    for (i=0;i<row;i++)
    {
        for(j=0;j<col;j++)
        {
            printf("enter the elements of the second array");
            scanf("%d",&arr2[i][j]);
            
        }
    }
    for (i=0;i<row;i++)
    {
        for(j=0;j<col;j++)
        {
            printf("%d",arr[i][j]+arr2[i][j]);
           printf("\t") ;
            
        }printf("\n"); 
    }
   


    return 0;
}
